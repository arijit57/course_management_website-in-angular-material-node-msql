<html>
  <head>
    <style>
      table {
        font-family: Arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      td,
      th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
      }
    </style>
  </head>
  <body>
    <h3 style="text-align: center; padding: 20px">Course Management System</h3>
    <table>
      <tr>
        <th>Name: <%= name %></th>
        <th>Email: <%= email %></th>
      </tr>
      <tr>
        <th>Mobile: <%= mobile %></th>
        <th>Payment Method: <%= paymentMethod %></th>
      </tr>
    </table>

    <h3>Product Details:</h3>
    <table>
      <tr>
        <th>Course Name</th>
        <th>Price</th>
        <th>Sub Total</th>
      </tr>
      <% if(productDetails.length > 0){ %> <% productDetails.forEach(product =>{
      %>
      <tr>
        <td><%= product.name %></td>
        <td>₹ <%= product.course_fee %></td>
        <td>₹ <%= product.total %></td>
      </tr>
      <%});%> <%}%>
    </table>
    <h3>Total:₹ <%= total %></h3>
    <h3>Thank you for visiting. Please visit again.</h3>
  </body>
</html>
